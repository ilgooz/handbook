@import './override.styl'

.hero h1
  display none

img
  max-width 100%

header.navbar
  background-color $backgroundColor

  .links
    background-color transparent
  .site-name
    display none
  .nav-item > a, .repo-link, .dropdown-title
    color #eee
    &:hover, &.router-link-active
      color white
  .sidebar-button
    color #eee

.home .hero
  img
    margin-bottom 5em
    margin-top 5em
  h1
    display none

@media (max-width: $MQMobileNarrow)
  .content div[class*="language-"]
    margin auto

.row
  padding: 1.2rem 0;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: stretch;

img.asset {
  width: 100px;
  margin: 1em;
  background: #f2f2f2;
  padding: 1em;
}